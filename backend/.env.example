# Crypto Trading AI - Environment Configuration Template
# Copy this file to .env and configure with your actual values

# Environment Type (development, staging, production, test)
ENVIRONMENT=development

# Debug and Logging
DEBUG=true
LOG_LEVEL=INFO

# Binance API Configuration
# For LIVE TRADING: Set BINANCE_TESTNET=false and use live API keys
# For SAFE TESTING: Set BINANCE_TESTNET=true and use testnet API keys
BINANCE_TESTNET=true
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Security
SECRET_KEY=your_secret_key_change_this_in_production

# Database Configuration (optional, for future features)
DATABASE_URL=sqlite:///./crypto_trading.db

# Redis Configuration (optional, for caching and queues)
REDIS_URL=redis://localhost:6379/0

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ML Model Configuration
MODEL_PATH=./models/enhanced_futures_trader.zip
TRAINING_DATA_LIMIT=2000

# Risk Management Settings
MAX_POSITION_SIZE=0.05
MAX_DAILY_TRADES=10
STOP_LOSS_PCT=0.05
TAKE_PROFIT_PCT=0.15
MAX_DRAWDOWN=0.20

# Safety Features
ENABLE_POSITION_LIMITS=true
ENABLE_DRAWDOWN_PROTECTION=true
ENABLE_EMERGENCY_STOP=true

# Monitoring and Health Checks
ENABLE_HEALTH_CHECKS=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_ERROR_REPORTING=false

# Development/Testing Options
MOCK_BINANCE_RESPONSES=false
FAST_MODE=false
SKIP_EXTERNAL_APIS=false